<section>
    {{#ifString title}}<h3>{{title}}</h3>{{else}}
        <h3 id="methods">
            {{translate 'Methods'}}
        </h3>
    {{/ifString}}
    {{#each methods}}
        <table class="table table-sm table-bordered">
            <tbody>
                <tr>
                    <td class="col-md-4">
                        <a name="{{name}}"></a>
                        <span class="name">
                            <b>
                            {{#each modifierKind}}
                                <span class="modifier">{{modifKind this}}</span>
                            {{/each}}
                            {{#if optional}}
                                <span class="modifier">{{translate 'Optional'}}</span>
                            {{/if}}
                            {{name}}
                            </b>
                            <a href="#{{name}}"><span class="fa fa-link"></span></a>
                        </span>
                    </td>
                </tr>
                {{#if ../file-path}}
                <tr>
                    <td class="col-md-4">
                        <i><code>{{file}}</code></i>
                    </td>
                </tr>
                {{/if}}
                {{#if argsDecorator}}
                    <tr>
                        <td class="col-md-4">
                            <i>{{translate 'Arguments'}} : </i><code>{{#each argsDecorator}}'{{this}}' {{/each}}</code>
                        </td>
                    </tr>
                {{/if}}
                <tr>
                    <td class="col-md-4">
                        {{#if modifierKind}}
                            <span class="modifier-icon fa fa-{{modifIcon modifierKind}}"></span>
                        {{/if}}<code>{{{functionSignature this}}}</code>
                    </td>
                </tr>

                {{#if decorators}}
                    <tr>
                        <td class="col-md-4">
                            <i>{{translate 'Decorators'}} : </i><code>{{#each decorators}}{{name}}{{/each}}</code>
                        </td>
                    </tr>
                {{/if}}

                {{#if line}}
                    {{#isTabEnabled ../navTabs "source"}}
                        {{#if inheritance}}
                            <tr>
                                <td class="col-md-4">
                                    <div class="io-line">{{translate 'Inherited-from'}} {{> link-type type=inheritance.file }}</div>
                                </td>
                            </tr>
                        {{/if}}
                        <tr>
                            <td class="col-md-4">
                                {{#if inheritance}}
                                    <div class="io-line">{{translate 'Defined-in'}} {{inheritance.file}}:{{{line}}}</div>
                                {{else}}
                                    <div class="io-line">{{translate 'Defined-in'}} <a href="" data-line="{{{line}}}" class="link-to-prism">{{../file}}:{{{line}}}</a></div>
                                {{/if}}
                            </td>
                        </tr>
                    {{/isTabEnabled}}
                {{/if}}

                {{#if typeParameters}}
                    {{#compare typeParameters.length ">" 0}}
                        <tr>
                            <td class="col-md-4">
                                <b>{{translate 'Type-parameters'}} :</b>
                                <ul class="type-parameters">
                                    {{#each typeParameters}}
                                        <li>{{this}}</li>
                                    {{/each}}
                                </ul>
                            </td>
                        </tr>
                    {{/compare}}
                {{/if}}

                {{#or jsdoctags returnType description}}
                <tr>
                    <td class="col-md-4">
                        {{#if description}}
                            <div class="io-description">{{{parseDescription description ../depth}}}</div>
                        {{/if}}

                        {{#if jsdoctags}}
                            {{#jsdoc-params-valid jsdoctags}}
                            <div class="io-description">
                                {{#jsdoc-params jsdoctags}}
                                    <b>{{translate 'Parameters'}} :</b>
                                    <table class="params">
                                        <thead>
                                            <tr>
                                                <td>{{translate 'Name'}}</td>
                                                {{#one-parameter-has tags 'type'}}
                                                    <td>{{translate 'Type'}}</td>
                                                {{/one-parameter-has}}
                                                <td>{{translate 'Optional'}}</td>
                                                {{#one-parameter-has tags 'defaultValue'}}
                                                    <td>{{translate 'Default-value'}}</td>
                                                {{/one-parameter-has}}
                                                {{#one-parameter-has tags 'comment'}}
                                                    <td>{{translate 'Description'}}</td>
                                                {{/one-parameter-has}}
                                            </tr>
                                        </thead>
                                        <tbody>
                                            {{#each tags}}
                                                <tr>
                                                    {{#if name}}
                                                        <td>{{name}}</td>
                                                    {{/if}}
                                                    {{#one-parameter-has ../tags 'type'}}
                                                        <td>
                                                            {{#if type}}
                                                                {{> link-type type=type }}
                                                            {{/if}}
                                                        </td>
                                                    {{/one-parameter-has}}
                                                    
                                                    <td>
                                                        {{#if optional}}
                                                            {{translate 'yes'}}
                                                        {{else}}
                                                            {{translate 'no'}}
                                                        {{/if}}
                                                    </td>
                                                    
                                                    {{#one-parameter-has ../tags 'defaultValue'}}
                                                        <td>
                                                            {{#if defaultValue}}
                                                                <code>{{defaultValue}}</code>
                                                            {{/if}}
                                                        </td>
                                                    {{/one-parameter-has}}

                                                    {{#one-parameter-has ../tags 'comment'}}
                                                        <td>
                                                            {{#if comment}}
                                                                <code>{{{comment}}}</code>
                                                            {{/if}}
                                                        </td>
                                                    {{/one-parameter-has}}
                                                </tr>
                                            {{/each}}
                                        </tbody>
                                    </table>
                                {{/jsdoc-params}}
                            </div>
                            {{/jsdoc-params-valid}}
                            <div>
                                {{#jsdoc-code-example jsdoctags}}
                                    <b>{{translate 'Example'}} :</b>
                                    {{#each tags}}
                                        <div>
                                            {{{comment}}}
                                        </div>
                                    {{/each}}
                                {{/jsdoc-code-example}}
                            </div>
                        {{/if}}
                        {{#if returnType}}
                            <div class="io-description">
                                <b>{{translate 'Returns'}} : </b>{{> link-type type=returnType }}
                            </div>
                            {{#if jsdoctags}}
                                <div class="io-description">
                                    {{{jsdoc-returns-comment jsdoctags}}}
                                </div>
                            {{/if}}
                        {{/if}}
                    </td>
                </tr>
                {{/or}}
            </tbody>
        </table>
    {{/each}}
</section>
