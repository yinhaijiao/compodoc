{{#if packageDependencies}}
    <ol class="breadcrumb">
        <li>{{translate 'Dependencies'}}</li>
    </ol>
    <ul class="dependencies-list">
        {{#each packageDependencies}}
        <li>
            <b>{{@key}}</b> : {{this}}</li>
        {{/each}}
    </ul>
{{/if}}

{{#if packagePeerDependencies}}

    {{#if packageDependencies}}
    <br/>
    {{/if}}
    <ol class="breadcrumb">
        <li>{{translate 'Peer-Dependencies'}}</li>
    </ol>
    <ul class="dependencies-list">
        {{#each packagePeerDependencies}}
        <li>
            <b>{{@key}}</b> : {{this}}</li>
        {{/each}}
    </ul>
{{/if}}